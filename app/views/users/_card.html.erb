<div class="col-xs-12 col-sm-6 col-lg-4">
  <div class="admin-user-card">
    <div class="admin-user-card__id">
      <div class="admin-user-card__avatar">
        <%= image_tag("default_avatar.jpg", alt: "Default Avatar") %>
      </div>
      <div class="admin-user-card__infos">
        <p><b><%= user.first_name_if_exist %>
          <%= user.last_name_if_exist %></b></p>
        <p><i><%= user.email  %></i> </p>
        <p>Username : <b><%= user.username %></b></p>
      </div>
    </div>

    <div class="admin-user-card__options">
      <ul>
        <% user.options_values.each do |option| %>
        <li><%= option[0] %> : <%= option[1] %></li>
        <% end %>
      </ul>
    </div>

    <%= link_to "Suppr", user_path(user), method: :delete, data: {confirm: " L'utilisateur '#{user.username}' sera supprimÃ© de la BDD, etes vous sur ?"}, class: "btn btn-danger admin-user-card__delete-btn"  %>

    <%= form_with url: edit_user_path(user), local: true, method: :get do |form| %>
      <%= form.button "Edit", class: "btn btn-default admin-user-card__edit-btn" %>
    <% end %>

  </div>
</div>
